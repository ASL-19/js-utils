{
  "name": "@asl-19/js-utils",
  "version": "0.2.1",
  "description": "Shared JavaScript utility functions for ASL19 projects",
  "author": {
    "name": "Grant Heaslip",
    "email": "grant@asl19.org",
    "url": "https://asl19.org/"
  },
  "license": "GPL-3.0-or-later",
  "repository": "ASL-19/js-utils",
  "engines": {
    "node": ">= 18"
  },
  "files": [
    "dist/**/*.js",
    "types/**/*.d.ts"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/js-utils.public.d.ts",
  "sideEffects": false,
  "scripts": {
    "api-extractor:check": "api-extractor run --verbose",
    "api-extractor:update": "api-extractor run --local --verbose",
    "api-documenter:update": "api-documenter markdown --input-folder ./api-extractor --output-folder ./docs",
    "build": "tsc -p tsconfig-cjs.json && tsc -p tsconfig-esm.json",
    "build-and-update-api": "yarn build && yarn api-extractor:update && yarn api-documenter:update",
    "eslint": "eslint . --ext js,ts",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@asl-19/eslint-config": "^0.8.0",
    "@microsoft/api-documenter": "^7.9.15",
    "@microsoft/api-extractor": "^7.10.4",
    "@types/node": "^20.5.7",
    "eslint": "^8.13.0",
    "prettier": "^2.1.2",
    "ts-pattern": "^5.0.5",
    "typescript": "^5.1.6"
  }
}
